{
  "manifest_version": 3,
  "name": "Promtitude LinkedIn Integration",
  "version": "1.0.0",
  "description": "Import LinkedIn profiles to Promtitude with one click",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.linkedin.com/*",
    "https://talentprompt-production.up.railway.app/*",
    "http://localhost:3000/*",
    "http://localhost:8000/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.linkedin.com/*"],
      "js": ["content/diagnostic.js", "content/inline-contact-extractor.js", "content/direct-email-extractor.js", "content/email-finder.js", "content/email-extractor-enhanced.js", "content/final-verifier.js", "content/ultra-clean-extractor.js", "content/contact-extractor.js", "content/aggressive-filter.js", "content/resume-cleaner.js", "content/log-experience.js", "content/calculate-experience.js", "content/data-validator.js", "content/text-filter.js", "content/simple-extractor.js", "content/clean-extractor.js", "content/debug-helper.js", "content/experience-debug.js", "content/linkedin-profile.js", "content/linkedin-search.js"],
      "css": ["content/styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon-16.png",
      "32": "assets/icons/icon-32.png",
      "48": "assets/icons/icon-48.png",
      "128": "assets/icons/icon-128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  }
}